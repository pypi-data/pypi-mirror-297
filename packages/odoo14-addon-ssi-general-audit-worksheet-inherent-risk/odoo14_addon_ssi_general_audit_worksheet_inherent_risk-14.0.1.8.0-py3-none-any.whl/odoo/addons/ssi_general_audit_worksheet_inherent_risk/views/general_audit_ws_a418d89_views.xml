    <record id="general_audit_ws_a418d89_view_form" model="ir.ui.view">
        <field name="name">general_audit_ws_a418d89 form</field>
        <field name="model">general_audit_ws_a418d89</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="inherent_risk" string="Inherent Risks">
                        <group name="inherent_risk_1" colspan="4" col="2">
                            <field name="risk_material_missstatement" />
                            <field name="auditor_respons" />
                        </group>
                        <group name="inherent_risk_2" colspan="4" col="1">
                            <label
                                for="detail_ids"
                                string="A. Merupakan transaksi yang tidak sering terjadi"
                            />
                            <label
                                for="detail_ids"
                                string="B. Salah saji yang dikoreksi pada perilde lalu (jika ada)"
                            />
                            <label
                                for="detail_ids"
                                string="C. Rentan terhadap perubahan lingkungan bisnis"
                            />
                            <label
                                for="detail_ids"
                                string="D. Terdapat kontijensi yang teridenti-fikasi"
                            />
                            <label
                                for="detail_ids"
                                string="E. Berdampak pada kerugian"
                            />
                            <label
                                for="detail_ids"
                                string="F. Akun mendapat perhatian khusus atas akuntansi pelaporan"
                            />
                            <label
                                for="detail_ids"
                                string="G. Akun yang memiliki kerumitan kompleks"
                            />
                            <label
                                for="detail_ids"
                                string="H. Akun transaksi dengan pihak berelasi yang signifikan"
                            />
                            <label
                                for="detail_ids"
                                string="I. Akun yang diukur mengguna-kan estimasi"
                            />
                            <label
                                for="detail_ids"
                                string="J. Akun yang signifikan yang tidak rutin"
                            />
                        </group>
                        <field name="detail_ids">
                        <tree create="false" delete="false">
                            <field name="standard_detail_id" invisible="1" />
                            <field name="currency_id" invisible="1" />
                            <field name="type_id" />
                            <field
                                    name="inherent_risk_factor_a"
                                    string="A"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_b"
                                    string="B"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_c"
                                    string="C"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_d"
                                    string="D"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_e"
                                    string="E"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_f"
                                    string="F"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_g"
                                    string="G"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_h"
                                    string="H"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_i"
                                    string="I"
                                    optional="show"
                                />
                            <field
                                    name="inherent_risk_factor_j"
                                    string="J"
                                    optional="show"
                                />
                            <field name="fraud_risk" optional="show" />
                            <field name="likelihood_risk_occuring" optional="show" />
                            <field name="impact_of_risk" optional="show" />
                            <field name="inherent_risk" optional="show" />
                            <field
                                    name="other_significant_risk_factor"
                                    optional="show"
                                />
                            <field name="significant_risk" optional="show" />
                            <field name="note" optional="show" />
                        </tree>
                            <form>
                                <sheet>
                                    <group name="header_1" colspan="4" col="2">
                                        <field name="type_id" />
                                        <field
                                            name="standard_detail_id"
                                            invisible="1"
                                        />
                                        <field name="currency_id" invisible="1" />
                                    </group>
                                    <group name="header_2" colspan="4" col="1">
                                        <field
                                            name="inherent_risk_factor_a"
                                            string="A. Merupakan transaksi yang tidak sering terjadi"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_b"
                                            string="B. Salah saji yang dikoreksi pada perilde lalu (jika ada)"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_c"
                                            string="C. Rentan terhadap perubahan lingkungan bisnis"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_d"
                                            string="D. Terdapat kontijensi yang teridenti-fikasi"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_e"
                                            string="E. Berdampak pada kerugian"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_f"
                                            string="F. Akun mendapat perhatian khusus atas akuntansi pelaporan"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_g"
                                            string="G. Akun yang memiliki kerumitan kompleks"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_h"
                                            string="H. Akun transaksi dengan pihak berelasi yang signifikan"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_i"
                                            string="I. Akun yang diukur mengguna-kan estimasi"
                                            widget="boolean_toggle"
                                        />
                                        <field
                                            name="inherent_risk_factor_j"
                                            string="J. Akun yang signifikan yang tidak rutin"
                                            widget="boolean_toggle"
                                        />

                                    </group>
                                    <group name="header_3" colspan="4" col="1">
                                        <field name="fraud_risk" />
                                        <field name="likelihood_risk_occuring" />
                                        <field name="impact_of_risk" />
                                        <field name="inherent_risk" force_save="1" />
                                        <field name="other_significant_risk_factor" />
                                        <field name="significant_risk" force_save="1" />
                                    </group>
                                    <group
                                        name="footer"
                                        colspan="4"
                                        col="2"
                                        string="Note"
                                    >
                                        <field name="note" nolabel="1" />
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_a418d89_action" model="ir.actions.act_window">
        <field name="name">Inherent Risk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_ws_a418d89</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_ws_a418d89_menu"
        name="Inherent Risk"
        parent="ssi_general_audit.menu_general_audit_risk_assesment"
        action="general_audit_ws_a418d89_action"
        sequence="1503"
        groups="general_audit_ws_a418d89_viewer_group"
    />


</odoo>
