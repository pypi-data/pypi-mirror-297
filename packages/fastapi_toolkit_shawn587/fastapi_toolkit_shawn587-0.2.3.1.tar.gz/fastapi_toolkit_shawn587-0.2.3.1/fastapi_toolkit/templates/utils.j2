{% macro render_table_field(field) %}
{{ field.name.snake }}: Mapped[{{ field.type.python_type }}] = mapped_column({{ field.type.sql_type }}, nullable={{ field.type.nullable }})
{% endmacro %}

{% macro render_schema_field(field) %}
{% if field.type.nullable %}
{{ field.name.snake }}: {{ field.type.python_type }} = Field(default=None)
{% else %}
{{ field.name.snake }}: {{ field.type.python_type }}
{% endif %}
{% endmacro %}