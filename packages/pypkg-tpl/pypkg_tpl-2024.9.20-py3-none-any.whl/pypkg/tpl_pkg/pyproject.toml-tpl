[project]
name = "${app_name}"
description = ""
authors = [
    { name = "", email = "" },
]
dependencies = [
]
dynamic = [
    "version",
]
requires-python = ">=3.7"
readme = "README.md"
license = { text = "GPL2.0" }

[project.scripts]
${app_name} = "${app_name}.cli:cli"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch]
version = { path = "${app_name}/__version__.py" }

[tool.hatch.build.targets.wheel]
packages = [
    "/${app_name}",
]

