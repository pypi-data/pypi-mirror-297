    "@spear-ai/eslint-config": "20.0.1",
    "@spear-ai/npm-package-json-lint-config": "3.1.1",
    "@spear-ai/prettier-config": "2.2.0",
    "@spear-ai/tsconfig": "4.0.0",
    "eslint": "8.57.1",
    "graphql": "16.9.0",
    "graphql-config": "5.1.2",
    "npm-package-json-lint": "8.0.0",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "replace-in-file": "8.2.0",
    "tailwindcss": "3.4.12",
    "tsx": "4.19.1",
    "turbo": "2.1.2",
