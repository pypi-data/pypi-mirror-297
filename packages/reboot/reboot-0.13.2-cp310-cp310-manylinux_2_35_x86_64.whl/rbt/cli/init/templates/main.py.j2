import asyncio
import logging
from {{ name }}.v1.hello_world_rbt import HelloWorld
from hello_world_servicer import HelloWorldServicer
from rbt.aio.applications import Application
from rbt.aio.external import ExternalContext

logging.basicConfig(level=logging.INFO)

EXAMPLE_STATE_MACHINE_ID = 'reboot-hello-world'


async def initialize(context: ExternalContext):
    await HelloWorld.lookup(EXAMPLE_STATE_MACHINE_ID).idempotently().Greet(
        context,
    )


async def main():
    application = Application(
        servicers=[HelloWorldServicer],
        initialize=initialize,
    )

    logging.info('ðŸ‘‹ Hello, World? Hello, Resemble! ðŸ‘‹')

    await application.run()


if __name__ == '__main__':
    asyncio.run(main())
