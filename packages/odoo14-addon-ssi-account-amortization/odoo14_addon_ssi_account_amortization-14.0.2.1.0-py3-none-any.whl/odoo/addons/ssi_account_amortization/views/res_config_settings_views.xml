<odoo>
<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings form - Psychology</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="1" />
    <field
            name="inherit_id"
            ref="ssi_financial_accounting.res_config_settings_view_form"
        />
    <field name="arch" type="xml">
        <xpath expr="//div[@id='financial_accounting_integration']" position="after">
                <h2>Optional Feature for Amortization</h2>
                <div
                    class="row mt16 o_settings_container"
                    id="amortization_optional_feature"
                >
                    <div
                        id="use_ssi_ssi_account_amortization_related_attachment"
                        class="col-12 col-lg-6 o_setting_box"
                    >
                        <div
                            name="use_ssi_account_amortization_related_attachment_left"
                            class="o_setting_left_pane"
                        >
                            <field
                                name="module_ssi_account_amortization_related_attachment"
                            />
                        </div>
                        <div
                            name="use_ssi_account_amortization_related_attachment_right"
                            class="o_setting_right_pane"
                        >
                            <label
                                for="module_ssi_account_amortization_related_attachment"
                                string="Related Attachment"
                            />
                            <div class="text-muted">
                                Use related attachment
                            </div>
                        </div>
                    </div>
                    <div
                        id="use_ssi_account_amortization_custom_information"
                        class="col-12 col-lg-6 o_setting_box"
                    >
                        <div
                            name="use_ssi_account_amortization_custom_information"
                            class="o_setting_left_pane"
                        >
                            <field
                                name="module_ssi_account_amortization_custom_information"
                            />
                        </div>
                        <div
                            name="use_ssi_account_amortization_custom_information"
                            class="o_setting_right_pane"
                        >
                            <label
                                for="module_ssi_account_amortization_custom_information"
                                string="Custom Information"
                            />
                            <div class="text-muted">
                                Use custom information
                            </div>
                        </div>
                    </div>
                    <div
                        id="use_ssi_account_amortization_status_check"
                        class="col-12 col-lg-6 o_setting_box"
                    >
                        <div
                            name="use_ssi_account_amortization_status_check"
                            class="o_setting_left_pane"
                        >
                            <field
                                name="module_ssi_account_amortization_status_check"
                            />
                        </div>
                        <div
                            name="use_ssi_account_amortization_status_check"
                            class="o_setting_right_pane"
                        >
                            <label
                                for="module_ssi_account_amortization_status_check"
                                string="Status Check"
                            />
                            <div class="text-muted">
                                Use status check
                            </div>
                        </div>
                    </div>
                    <div
                        id="use_ssi_account_amortization_state_change_constrains"
                        class="col-12 col-lg-6 o_setting_box"
                    >
                                    <div
                            name="use_ssi_account_amortization_state_change_constrains"
                            class="o_setting_left_pane"
                        >
                                        <field
                                name="module_ssi_account_amortization_state_change_constrains"
                            />
                                    </div>
                                    <div
                            name="use_ssi_account_amortization_state_change_constrains"
                            class="o_setting_right_pane"
                        >
                                        <label
                                for="module_ssi_account_amortization_state_change_constrains"
                                string="State Change Constrains"
                            />
                                        <div class="text-muted">
                                            Use status check
                                          </div>
                                      </div>
                                  </div>
                    <div
                        id="use_ssi_account_amortization_qrcode"
                        class="col-12 col-lg-6 o_setting_box"
                    >
                                    <div
                            name="use_ssi_account_amortization_qrcode"
                            class="o_setting_left_pane"
                        >
                                        <field
                                name="module_ssi_account_amortization_qrcode"
                            />
                                    </div>
                                    <div
                            name="use_ssi_account_amortization_qrcode"
                            class="o_setting_right_pane"
                        >
                                        <label
                                for="module_ssi_account_amortization_qrcode"
                                string="QR Code"
                            />
                                        <div class="text-muted">
                                            Use QR Code
                                          </div>
                                      </div>
                                  </div>
                </div>
        </xpath>
    </field>
</record>
</odoo>
